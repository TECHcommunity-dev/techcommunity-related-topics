<!-- If our component is true, show this content: -->
<PluginOutlet @name="above-related-topics" @tagName="span" @connectorTagName="div" @args={{hash model=this.model}} />
{{#if displayRelatedTopics}}

    <div class="custom-related-topics-wrapper">
    <!-- Show a loading spinner if topics are loading -->
    {{conditional-loading-spinner condition=loadingTopics}}

    <!-- Unless topics are still loading... -->
    {{#unless loadingTopics}}
        <!-- Show the related topics list  -->
        <h3 id="related-topics-title" class="related-topics-title">
            {{relatedTopicsTitle}}
        </h3>
        <!-- Show the related topic list -->
        <div class="topics">
            <BasicTopicList @topics={{relatedTopics}} />
        </div>
    {{/unless}}
    </div>
{{/if}}

<PluginOutlet @name="below-related-topics" @tagName="span" @connectorTagName="div" @args={{hash model=this.model}} />